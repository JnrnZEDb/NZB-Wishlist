<% severity ||= :danger %>
<% title    ||= '' %>

<div class="col-md-6 col-md-offset-3">
    <div class="panel panel-<%= severity %> panel-err">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="glyphicon glyphicon-alert"></i> <%= title %></h3>
      </div>
      <div class="panel-body">
        <%= yield %>
      </div>
    </div>
</div>